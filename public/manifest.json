{
  "manifest_version": 3,
  "name": "LinkedIn Input Alert Extension",
  "version": "1.0",
  "description": "Shows an alert when the input button is clicked.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]    }
  ]
}
